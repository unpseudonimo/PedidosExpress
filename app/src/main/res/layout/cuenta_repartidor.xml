<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Repartidor.CuentaRepartidor">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:name=".login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="REPARTIDOR" />

            <Button
                android:id="@+id/btnHistorialRepartidor"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ffa900"
                android:onClick="login"
                android:text="Historial de Repartos"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnFavoritos"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ffa900"
                android:onClick="login"
                android:text="Favoritos"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/notificacionRepartidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Notificaciones"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/VehiculosRepartidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Vehiculos"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/pagosRepartidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Pagos y tarjetas"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/soporteRepartidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Soporte"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/btnmapaRepartidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Mapa"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/AdministrarCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Administrar Cuenta"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/Acercade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Acerca de"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/PrivacidadySeguridad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Privacidad y Seguridad"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/Configuracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="ConfiguraciÃ³n de la app"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Log out"
                android:textColor="@color/red" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        app:backgroundTint="@color/white"
        app:itemRippleColor="#ffa900"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_main" />

</androidx.constraintlayout.widget.ConstraintLayout>