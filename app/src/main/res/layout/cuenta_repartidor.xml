<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.repartidor.CuentaRepartidor">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:name=".login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Repartidor" />

            <Button
                android:id="@+id/btnIniciarSesionConsumidor"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ffa900"
                android:onClick="login"
                android:text="Iniciar sesiÃ³n"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnRegistrarCuenta"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ffa900"
                android:onClick="login"
                android:text="Registrarse"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnFavoritos"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#ffa900"
                android:onClick="login"
                android:text="Favoritos"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/notificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Notificaciones"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/pagos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Pagos y tarjetas"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/soporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Soporte"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/btnmapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Mapa"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/recomendacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Recomendaciones"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/ajustes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Ajustes de perfil"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp"
                android:onClick="createAccount"
                android:padding="8dp"
                android:text="Log out"
                android:textColor="@color/red" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        app:backgroundTint="@color/white"
        app:itemRippleColor="#ffa900"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_main" />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/FragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>